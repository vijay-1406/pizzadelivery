<section class="menu container mx-auto py-8">
    <h1 class="font-bold text-xl mb-8 ">All Pizzas</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4  col-gap-12 row-gap-16 ">
        <% pizzas.forEach(function(pizza){ %>
            <div class="w-full md:w-64">
                <img src="data:image/png;base64,<%=pizza.image.toString('base64')%>" class="h-40 mb-4 mx-auto" style="width: 160.33px; height: 160px;"  alt="pizza">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size_color py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                    <div id="add-del-btns" value="<%=JSON.stringify(pizza) %>" class="flex items-center justify-around mt-6">
                        
                        <button data-pizza="<%= JSON.stringify(pizza) %>" id="add-to-cart" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                        <% if(session.cart) { %>
                       <% if(session.cart.items[pizza._id]) { %>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" id="delete-from-cart" class="delete-from-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>-</span>
                            <span class="ml-4">Delete</span>
                        </button>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
        
    
    </div>
</section>